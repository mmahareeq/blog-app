<div class="d-flex flex-column justify-content-cent w-50">
<h2 class="text-center">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email , class: "form-label mb-2"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control mb-2" %>
  </div>

  <div class="field">
    <%= f.label :password , class: "form-label mb-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , class: "btn btn-primary btn-sm mb-2"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>



