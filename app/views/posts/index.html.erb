
<div class="d-flex justify-content-between">
   <h1 class="fs-3">Posts</h1>
   <%= button_to 'Add New Post', '/posts/new', method: "get", class: "btn btn-primary btn-sm"%>
</div>

<div class="row">
<% if @post.empty? %>
      <p class="text-center fs-4"> there are no posts</p>
<% else %>
<% @post.each do |post| %>
    <div class="col-md-6 col-lg-4">
    <%= link_to post, class: 'text-decoration-none' do %>
  <div class="card post-card" style="width:280px;">    
  
  <%= image_tag post.image , alt: "cover_post", style: "width: 100%, height: 200px;", class: "object-fit-cover"%>
    <div class="card-body p-2">
      <h2 class="card-title fs-4"> <%= post.name %></h2>
      <% if post.draft? %>
      <span class="badge btn-secondary mb-1">Draft</span>
    <% elsif post.published? %>
       <span class="badge bg-success mb-1">published</span>
    <%else %>
    <span class="badge btn-info mb-1">scheduled</span>
    <% end %>
    <p class="text-card"><%= truncate(post.content, length: 200) %></p>
    </div>
    <%= button_to 'Read Post', post_path(post), method: "get" , class: "btn btn-primary btn-sm m-2"%>
  </div>
  <% end %>
  </div>
<% end %>

<% end %>


</div>


