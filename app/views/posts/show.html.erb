<div>  
  <%= link_to 'Back', "/posts", method: "get", class:"btn btn-outline-dark btn-sm me-2"%>
  <h2 class="fs-3"> <%= @post.name %></h2>
  <div>
    <%= image_tag @post.image , alt: "cover_post", style: "width: 100%; height: 300px;", class: "object-fit-cover"%>
  </div>
  <% if @post.draft? %>
    <span class="badge bg-success mt-2 mb-2"> Draft</span>
  <% elsif @post.published? %>
    <span class="badge bg-success mt-2 mb-2">published</span>
  <%else %>
    <span class="badge bg-success mb-2 mt-2">scheduled</span>
  <% end %>
  <p><%= @post.content %></p>

  <div class="d-flex">
    <%= button_to 'Edit', edit_post_path(@post), method: "get" , class: "btn btn-primary btn-sm me-2" %>
    <%= button_to 'Delete', @post, method: "delete", data: {turbo_confirm: 'Are you sure? '}, class: "btn btn-danger btn-sm" %>
  </div>
</div>
